{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true,
        "jasmine": true
    },
    "extends": [
        "airbnb-base",
        "plugin:jasmine/recommended",
        "plugin:import/recommended"
    ],
    "plugins": ["jasmine", "import"],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "no-underscore-dangle": "off",
        "no-console": "off",
        "import/no-extraneous-dependencies": ["error", {
            "devDependencies": true
        }],
        "no-restricted-globals": "off"
    }
}
